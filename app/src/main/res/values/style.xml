        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="EditTextInput" parent="@style/Widget.AppCompat.EditText">
        <item name="fontFamily"> @font/nanumlight</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity"> center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="TextViewTop" parent="@style/Widget.AppCompat.TextView">
        <item name="fontFamily"> @font/nanumbold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity"> center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="TextView" parent="@style/Widget.AppCompat.TextView">
        <item name="fontFamily"> @font/nanumbold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity"> center_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewTextColorWhite" parent="@style/Widget.AppCompat.TextView">
        <item name="fontFamily"> @font/nanumbold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity"> center_vertical</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewBold" parent="@style/Widget.AppCompat.TextView">
        <item name="fontFamily"> @font/nanumextrabold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity"> center_vertical</item>
        <item name="android:textColor">@color/black</item>
