<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyPopupMenu" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/activity_corner</item>
    </style>

    <style name="BottomNavigationViewTextInactive" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textSize">13sp</item> <!-- 텍스트 크기를 조정합니다. -->
        <item name="fontFamily">@font/nanumregular</item>
        <item name="android:textColor">@color/MyColor_NonSelect</item>
    </style>

    <style name="BottomNavigationViewTextActive" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">15sp</item> <!-- 텍스트 크기를 조정합니다. -->
        <item name="fontFamily">@font/nanumextrabold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextTop" parent="@style/Widget.AppCompat.EditText">
        <item name="fontFamily"> @font/nanumbold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity"> center_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="fontFamily"> @font/nanumbold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity"> clip_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextInput" parent="@style/Widget.AppCompat.EditText">
        <item name="fontFamily"> @font/nanumlight</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity"> center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="TextViewTop" parent="@style/Widget.AppCompat.TextView">
        <item name="fontFamily"> @font/nanumbold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity"> center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="TextView" parent="@style/Widget.AppCompat.TextView">
        <item name="fontFamily"> @font/nanumbold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity"> center_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewBold" parent="@style/Widget.AppCompat.TextView">
        <item name="fontFamily"> @font/nanumextrabold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity"> center_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:fontFamily">@font/nanumbold</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>