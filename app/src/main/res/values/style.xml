        <item name="android:fontFamily">@font/nanumbold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/nanumextrabold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/MyColor_Background</item>

    </style>

    <style name="CalendarCellInDate">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalendarCellOutDate">
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="SelectedDate">
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:background">@color/MyColor_Pink</item>
    </style>

    <style name="RangeDateStyle">
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="TodayDateStyle">
        <item name="android:textColor">@color/white</item>
    </style>


