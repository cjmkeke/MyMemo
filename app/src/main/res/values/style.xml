        <item name="fontFamily">@font/lottemartlight</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="EditTextTop" parent="@style/Widget.AppCompat.EditText">
        <item name="fontFamily"> @font/nanumbold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity"> center_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="fontFamily"> @font/nanumbold</item>
        <item name="android:textSize">15sp</item>
