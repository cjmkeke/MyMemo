<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyPopupMenu" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/activity_corner</item>
    </style>

    <style name="ProfilePopup" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/activity_corner_0dp</item>
    </style>

    <style name="BottomNavigationViewTextInactive" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item> <!-- 텍스트 크기를 조정합니다. -->
        <item name="fontFamily">@font/lottemartlight</item>
        <item name="android:textColor">@color/MyColor_NonSelect</item>
    </style>

    <style name="BottomNavigationViewTextActive" parent="@style/TextAppearance.AppCompat.Medium">
