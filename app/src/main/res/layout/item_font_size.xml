<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_layout"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/font_size_7"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_font"
        android:gravity="center"
        android:fontFamily="@font/nanumbold"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:text="7"/>

    <TextView
        android:id="@+id/font_size_8"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/bg_font"

        android:gravity="center"
        android:fontFamily="@font/nanumbold"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:text="8"/>

    <TextView
        android:id="@+id/font_size_9"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/bg_font"

        android:fontFamily="@font/nanumbold"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:text="9"/>


    <TextView
        android:id="@+id/font_size_10"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/bg_font"

        android:fontFamily="@font/nanumbold"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:text="10"/>


    <TextView
        android:id="@+id/font_size_11"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/bg_font"

        android:fontFamily="@font/nanumbold"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:text="11"/>


    <TextView
        android:id="@+id/font_size_12"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/bg_font"

        android:fontFamily="@font/nanumbold"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:text="12"/>
    <TextView
        android:id="@+id/font_size_13"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_font"

        android:fontFamily="@font/nanumbold"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:text="13"/>

</LinearLayout>