<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow_layout"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:id="@+id/bg_color_orange"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="#F44336"/>
            <View
                android:id="@+id/bg_color_pink"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"

                android:layout_gravity="center"
                android:background="#E91E63"/>
            <View
                android:id="@+id/bg_color_purple"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"

                android:layout_gravity="center"
                android:background="#9C27B0"/>
            <View
                android:id="@+id/bg_color_bold_purple"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"

                android:background="#673AB7"/>

            <View
                android:id="@+id/bg_color_blue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"

                android:background="#2196F3"/>

            <View
                android:id="@+id/bg_color_bold_green"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#4CAF50" />

            <View
                android:id="@+id/bg_color_white"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/activity_corner_line_10dp" />

        </LinearLayout>

</LinearLayout>