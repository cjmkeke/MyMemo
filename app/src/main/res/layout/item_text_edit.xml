<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_upload_images"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                style="@style/TextView"
                android:gravity="center"
                android:background="@drawable/icons_image_upload_size"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/nanumbold"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/fontSize"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                style="@style/TextView"
                android:gravity="center"
                android:background="@drawable/activity_corner_line_10dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/nanumbold"
                android:text="9"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_strikethrough"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                style="@style/TextView"
                android:gravity="center"
                android:background="@drawable/icons_text_adjustment_size"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/nanumbold"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/fontBackColor"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/icons_font_bg_color_size"
                style="@style/TextView"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/nanumbold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/insertYouTube"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/icons_youtube_size"
                style="@style/TextView"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/nanumbold"
                android:textSize="14sp"/>

            <View
                android:id="@+id/color_orange"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="#F44336"/>
            <View
                android:id="@+id/color_pink"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="#E91E63"/>
            <View
                android:id="@+id/color_purple"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="#9C27B0"/>
            <View
                android:id="@+id/color_bold_purple"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="#673AB7"/>

            <View
                android:id="@+id/color_blue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="#2196F3"/>
            <View
                android:id="@+id/color_bold_green"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="#4CAF50"/>
            <View
                android:id="@+id/color_green"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="#8BC34A"/>
            <View
                android:id="@+id/color_yellow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="#FFEB3B"/>
            <View
                android:id="@+id/color_black_blue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="#3F51B5"/>
            <View
                android:id="@+id/color_black"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="#000000"/>

            <View
                android:id="@+id/color_red"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="#FF0000"/>

            <View
                android:id="@+id/color_black_pink"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:background="#8F097E"/>
        </LinearLayout>

</LinearLayout>