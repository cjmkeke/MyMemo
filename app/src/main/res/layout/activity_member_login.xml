<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".userActivity.MemberLogin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumregular"
        android:textSize="13sp"
        android:text="@string/login_messages1"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/nanumregular"
        android:textSize="13sp"
        android:background="@drawable/textview_white"
        android:textColorHint="@color/black"
        android:gravity="center_vertical"
        android:hint="sample@email.com"
        android:inputType="text"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nanumregular"
        android:textSize="13sp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:hint="password"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:background="@drawable/textview_white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_yellow"
            android:textColor="@color/white"
            android:fontFamily="@font/nanumregular"
            android:textSize="13sp"
            android:gravity="center"
            android:text="@string/login"/>

        <TextView
            android:id="@+id/tv_re_password"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_yellow"
            android:textColor="@color/white"
            android:fontFamily="@font/nanumregular"
            android:textSize="13sp"
            android:gravity="center"
            android:text="@string/find_password"/>
    </LinearLayout>

</LinearLayout>